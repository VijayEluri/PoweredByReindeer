	<context:annotation-config />
	<context:spring-configured />
	<context:component-scan base-package="com.vaadinengine" />

	<!-- user functions -->
	
	<bean id="userFunctions" class="com.vaadinengine.ui.user.function.Functions">
		<property name="functions">
			<list>
				<bean class="com.vaadinengine.ui.user.function.LoginFunction" />
				<bean class="com.vaadinengine.ui.user.function.LogoutFunction" />
				<bean class="com.vaadinengine.ui.user.function.AdminFunction" />
			</list>
		</property>
	</bean>

</beans>